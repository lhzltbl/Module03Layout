<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Module03Layout.GridPage" Title="Grid Page">
    <ContentPage.Content>
        <StackLayout Padding="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Row="0"
                       Grid.Column="0"
                       Grid.ColumnSpan="2"
                       Source="gridImage.jpg"
                       Aspect="AspectFit"/>

                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="Grid Layout Example" 
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="Black"
                       FontSize="40"
                       FontAttributes="Bold"/>

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>